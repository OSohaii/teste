{
    "name": "nyaamal",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "./icon.png",
        "default_title": "nyaamal"
    },
    "icons": {
        "300": "./icon.png"
    },
    "content_scripts": [{
            "matches": ["https://myanimelist.net/anime/*"],
            "js": ["myanimelist/content.js"]
        },
        {
            "matches": ["https://anilist.co/anime/*"],
            "js": ["anilist/content.js"]
        }
    ],
    "web_accessible_resources": ["myanimelist/script.js", "anilist/script.js", "nyaa-scraper.js"],
    "permissions": [
        "*://nyaaapi.herokuapp.com/*",
        "*://myanimelist.net/*",
        "tabs"
    ]
}